{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false
  },
  "include": ["packages"],
  "exclude": ["**/dist"]
}
