{
  "name": "@icona/figma-plugin",
  "packageManager": "yarn@3.5.1",
  "scripts": {
    "tsc": "yarn tsc:main && yarn tsc:ui",
    "tsc:main": "tsc --noEmit -p plugin-src",
    "tsc:ui": "tsc --noEmit -p ui-src",
    "build": "yarn build:ui && yarn build:main -- --minify",
    "build:main": "node ./esbuild.plugin.js",
    "build:ui": "yarn vite build --minify esbuild --emptyOutDir=false",
    "build:watch": "yarn build:ui --watch && yarn build:main --watch",
    "dev": "yarn build:watch"
  },
  "dependencies": {
    "@figma/plugin-typings": "^1.64.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@vanilla-extract/css": "^1.11.0",
    "@vanilla-extract/recipes": "^0.4.0",
    "@vanilla-extract/vite-plugin": "^3.8.1",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "esbuild": "^0.17.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.4",
    "ultra-runner": "^3.10.5",
    "vite": "^4.3.5",
    "vite-plugin-singlefile": "^0.13.5"
  }
}
